

<ul>
   <% userFolders.forEach(folder => { %> 
        <li>
            Name: <%= folder.folder_name %> 
        </li>
        <form action="/storage/<%= folder.folder_name %>/delete-folder" method="POST">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this Folder?');">Delete</button>
        </form>
        <form action="/<%= folder.folder_name %>/update-folder" method="GET">
            <button type="submit" onclick="return confirm('Are you sure you want to edit?');">Edit</button>
        </form>
        <% }); %>
</ul> 
